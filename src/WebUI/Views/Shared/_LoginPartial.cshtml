@using System.Security.Claims

@if (User.IsSignedIn())
{
    <form asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="right menu">
        <div class="right menu">
            <a class="item" asp-controller="Manage" asp-action="Index" title="Manage">Hello @User.GetUserName()!</a>
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log off</button>
        </div>
    </form>
}
else
{
    <div class="right menu">
        <a class="ui item" asp-controller="Account" asp-action="Login">Log in</a>
    </div>
}
