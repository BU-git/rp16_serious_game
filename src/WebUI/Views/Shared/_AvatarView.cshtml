@model WebUI.ViewModels.AvatarMarket.AvatarViewModel

<div class="content content-unpadded">
    <span class="right floated star">
        <a class="floating ui yellow circular label">@Html.DisplayFor(m => m.Avatar.Price)</a>
    </span>
</div>
<div class="blurring dimmable image">
    <div class="ui dimmer">
        <div class="content">
            <div class="center">
                <div class="ui inverted button">Unlock Avatar</div>
            </div>
        </div>
    </div>
    <img src="@Model.Avatar.Media.AdditionalPath">
</div>