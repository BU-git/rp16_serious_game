@model WebUI.ViewModels.Task.UserWithStatsViewModel

<div class="ui segments">
    <div>
        <a>
            <img src="https://conferencecloud-assets.s3.amazonaws.com/default_avatar.png" alt="Avatar">
            <span>@Model.Name</span>
        </a>
    </div>
    <div>
        <h3>Tasks</h3>
        <div class="ui statistic">
            <div class="value">
                @Model.CompletedTasks
            </div>
            <div class="label">
                Completed
            </div>
        </div>
        <div class="ui statistic">
            <div class="value">
                @Model.TasksLeft
            </div>
            <div class="label">
                Left
            </div>
        </div>

        <div id="chart_div"></div>
    </div>
</div>

