@using System.Threading.Tasks
@using Domain.Entities
@model WebUI.ViewModels.Account.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}
<div class="row">
    <div class="ui middle aligned center aligned grid">
        <div class="eight wide doubling stackable column">
            <h2 class="ui center aligned header">
                @ViewData["Title"].
            </h2>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" role="form" class="ui large form">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon"></i>
                        <input asp-for="Email" placeholder="E-mail address" />
                        <div class="ui red tag label">
                            <span asp-validation-for="Email">
                            </span>
                        </div>

                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon"></i>
                        <input asp-for="Password" placeholder="Password" />
                        <div class="ui red tag label">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left checkbox">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>
                    <button type="submit" class="ui teal fluid large submit button">Login</button>
                </div>
            </form>
            <div class="ui message">
                <a asp-action="ForgotPassword">Forgot your password?</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
